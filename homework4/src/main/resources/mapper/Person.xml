<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.homework.homework4.mapper.PersonMapper">
    <insert id="insert">
        INSERT INTO person (id,name,phone,qq,email) VALUES (#{id},#{name},#{phone},#{qq},#{email})
    </insert>
    <update id="update">
        UPDATE person SET name = #{name}, phone = #{phone}, qq = #{qq},email = #{email} WHERE id = #{id}
    </update>
    <delete id="delete">
        DELETE FROM person WHERE id = #{id}
    </delete>

    <select id="findLikeUsername" resultType="com.homework.homework4.pojo.po.Person">
        SELECT * FROM person WHERE name LIKE #{name} LIMIT #{startIndex},#{count}
    </select>
    <select id="findById" resultType="com.homework.homework4.pojo.po.Person">
        SELECt * FROM  person WHERE id = #{id}
    </select>
    <select id="findByPhone" resultType="com.homework.homework4.pojo.po.Person">
        SELECT * FROM person WHERE phone LIKE #{phone}
    </select>
    <select id="findByQq" resultType="com.homework.homework4.pojo.po.Person">
        SELECT * FROM person WHERE qq = #{qq}
    </select>
    <select id="findByEmail" resultType="com.homework.homework4.pojo.po.Person">
        SELECT * FROM person WHERE email = #{email}
    </select>
    <select id="findByIdOrPhone" resultType="com.homework.homework4.pojo.po.Person">
        SELECT * FROM person WHERE id = #{id} OR phone = #{phone}
    </select>
    <select id="findByName" resultType="com.homework.homework4.pojo.po.Person">
        SELECt * FROM person WHERE name =#{name}
    </select>
</mapper>